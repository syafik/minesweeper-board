<%= simple_form_for @game do |f| %>
  <%= f.input :email, wrapper_html: { class: 'mb-3' }, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
  <%= f.input :name, wrapper_html: { class: 'mb-3' }, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
  <%= f.input :width, wrapper_html: { class: 'mb-3' }, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
  <%= f.input :height, wrapper_html: { class: 'mb-3' }, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
  <%= f.input :number_of_mines, wrapper_html: { class: 'mb-3' }, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
  <%= f.button :submit, "Save game", class: "btn btn-primary"  %>
<% end %>